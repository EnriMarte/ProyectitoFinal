<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/txtphlaboratorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editTextPh"
                android:layout_alignBottom="@+id/editTextPh"
                android:layout_alignParentStart="true"
                android:layout_marginStart="101dp"
                android:paddingBottom="5dp"
                android:text="pH"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextPh"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_toRightOf="@+id/txtphlaboratorio"
                android:inputType="numberDecimal"
                android:hint="Valor" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txthco3laboratorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="83dp"
                android:paddingBottom="5dp"
                android:text="@string/textNaHCO3"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/editTextHco3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_toRightOf="@+id/txthco3laboratorio"
                android:inputType="numberDecimal"
                android:hint="Valor" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtpco2laboratorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:paddingBottom="5dp"
                android:text="@string/textpCO2"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/editTextpco2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_toRightOf="@+id/txtpco2laboratorio"
                android:inputType="numberDecimal"
                android:hint="Valor" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtnalaboratorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="101dp"
                android:paddingBottom="5dp"
                android:text="Na"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/editTextNa"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_toRightOf="@+id/txtnalaboratorio"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:hint="Valor" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtcllaboratorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="106dp"
                android:paddingBottom="5dp"
                android:text="Cl"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/editTextCl"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_toRightOf="@+id/txtcllaboratorio"
                android:inputType="numberDecimal"
                android:hint="Valor" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="100dp"
        android:layout_marginStart="180dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/botonProcesar"
        android:text="diagnostico"
        android:fontFamily="fontFamily: sans-serif-thin"
        android:textColor="#FFFFFF"
        android:background="@color/colorAccent" />

</LinearLayout>